{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
<main id="main">

    <!-- ======= Blog Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Comment</h2>

                <ol>
                    <li><a href="{{ path('home') }}">Home</a></li>
                    <li><a href="{{ path('admin') }}">Admin</a></li>
                    <li>Comment index</li>
                </ol>
            </div>

        </div>
    </section><!-- End Blog Section -->

    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
        <div class="container" data-aos="fade-up">

            <div class="row d-flex justify-content-center mb-5">
                <div class="col">
                    <h1>Comment index</h1>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Content</th>
                                <th>Nickname</th>
                                <th>Active</th>
                                <th>Email</th>
                                <th>Date</th>
                                <th>Rgpd</th>
                                <th width="9%"></th>
                                <th width="4%"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for comment in comments %}
                            <tr>
                                <td>{{ comment.id }}</td>
                                <td>{{ comment.content }}</td>
                                <td>{{ comment.nickname }}</td>
                                <td class="small">{{ comment.isActive ? 'Yes' : 'No' }}</td>
                                <td>{{ comment.email }}</td>
                                <td class="small">{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td class="small">{{ comment.rgpd ? 'Yes' : 'No' }}</td>
                                <td>
                                    <a class="btn btn-sm btn-info" href="{{ path('comment_show', {'id': comment.id}) }}">show</a>
                                    <a class="btn btn-sm btn-warning" href="{{ path('comment_edit', {'id': comment.id}) }}">edit</a>
                                </td>
                                <td>
                                    {{ include('comment/_delete_form.html.twig') }}
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="8">no records found</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                    <a class="btn btn-success" href="{{ path('comment_new') }}">Create new</a>
                </div>
            </div>
            <div class="pagination justify-content-center px-2 mt-4">
                {{ knp_pagination_render(comments) }}
            </div>
        </div>
    </section>
</main>
{% endblock %}