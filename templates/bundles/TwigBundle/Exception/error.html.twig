{% extends 'base.html.twig' %}

{% block title %}{{ site_name }}: error {{ status_code }}{% endblock %}

{% block body %}
<main id="main">

    <!-- ======= Blog Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Error</h2>

                <ol>
                    <li><a href="{{ path('home') }}">Home</a></li>
                    <li>Error {{ status_code }}</li>
                </ol>
            </div>

        </div>
    </section><!-- End Blog Section -->

    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
        <div class="container" data-aos="fade-up">
            <div class="row">
                <div class="col mt-4 alert-danger py-5 px-3">
                    <h1 class="display-1 font-weight-bold">ERROR7 {{ status_code }}</h1>
                    <h1 class="display-4 mb-5">{{ status_text }}</h1>
                    Click the button below
                </div>
                <div class="mt-3">
                    <a class="btn btn-primary p-3 lead" href="{{ path('home') }}">Back to Home page</a>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}