{% extends 'base.html.twig' %}

{% block title %}{{ site_name }}: tag index{% endblock %}

{% block body %}
<main id="main">

    <!-- ======= Blog Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Tag</h2>

                <ol>
                    <li><a href="{{ path('home') }}">Home</a></li>
                    <li><a href="{{ path('admin') }}">Admin</a></li>
                    <li>Tag index</li>
                </ol>
            </div>

        </div>
    </section><!-- End Blog Section -->

   <!-- ======= Blog Section ======= -->
   <section id="blog" class="blog">
    <div class="container" data-aos="fade-up">

        <div class="row py-5">

            <div class="col mb-4">
                <h1>Tag index</h1>

                <table class="table mb-5">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Slug</th>
                            <th width="9%"></th>
                            <th width="4%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for tag in tags %}
                        <tr>
                            <td>{{ tag.id }}</td>
                            <td>{{ tag.title }}</td>
                            <td>{{ tag.slug }}</td>
                            <td>
                                <a class="btn btn-sm btn-info" href="{{ path('tag_show', {'slug': tag.slug}) }}">show</a>
                                <a class="btn btn-sm btn-warning" href="{{ path('tag_edit', {'id': tag.id}) }}">edit</a>
                            </td>
                            <td>
                                {{ include('tag/_delete_form.html.twig') }}
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <a class="btn btn-success" href="{{ path('tag_new') }}">Create new tag</a>

            </div>
        </div>
    </div>
</section>

</main>
{% endblock %}