{% extends 'base.html.twig' %}

{% block title %}{{ site_name }}: user index{% endblock %}

{% block body %}
<main id="main">

    <!-- ======= Blog Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>User</h2>

                <ol>
                    <li><a href="{{ path('home') }}">Home</a></li>
                    <li><a href="{{ path('admin') }}">Admin</a></li>
                    <li>User index</li>
                </ol>
            </div>

        </div>
    </section><!-- End Blog Section -->

    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
        <div class="container" data-aos="fade-up">

            <div class="row d-flex justify-content-center mb-5">
                <div class="col">
                    <h1>User index</h1>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Email</th>
                                <th>Roles</th>
                                <th>Username</th>
                                <th>Image</th>
                                <th>IsVerified</th>
                                <th width="9%"></th>
                                <th width="5%"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.email }}</td>
                                <td>
                                    {% if user.roles|json_encode == '["ROLE_USER"]' %}
                                        <span class="text-primary fw-bold">User</span>
                                    {% else %}
                                        <span class="text-danger fw-bold">Admin</span>
                                    {% endif %}
                                    {#{ user.roles ? user.roles|json_encode : '' }#}
                                </td>
                                <td>{{ user.username }}</td>
                                <td>
                                    {% if user.image %}
                                        Yes
                                    {% else %}
                                        No
                                    {% endif %}
                                </td>
                                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                                <td>
                                    <a class="btn btn-sm btn-info" href="{{ path('user_show', {'id': user.id}) }}">show</a>
                                    <a class="btn btn-sm btn-warning" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                                </td>
                                <td>
                                    {{ include('user/_delete_form.html.twig') }}
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="8">no records found</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                    <a class="btn btn-success" href="{{ path('user_new') }}">Create new user</a>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}