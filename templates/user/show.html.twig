{% extends 'base.html.twig' %}

{% block title %}{{ site_name }}: {{ user.username }}{% endblock %}

{% block body %}
<main id="main">

    <!-- ======= Blog Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Blog</h2>

                <ol>
                    <li><a href="{{ path('home') }}">Home</a></li>
                    <li>Admin Index</li>
                </ol>
            </div>

        </div>
    </section><!-- End Blog Section -->

    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
        <div class="container" data-aos="fade-up">

            <div class="row d-flex justify-content-center mb-5">
                <div class="col">
                    <h1>User</h1>

                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ user.id }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ user.email }}</td>
                            </tr>
                            <tr>
                                <th>Roles</th>
                                <td>
                                    {% if user.roles|json_encode == '["ROLE_USER"]' %}
                                        <span class="text-primary fw-bold">User</span>
                                    {% else %}
                                        <span class="text-danger fw-bold">Admin</span>
                                    {% endif %}
                                    {#{ user.roles ? user.roles|json_encode : '' }#}
                                </td>
                            </tr>
                            <tr>
                                <th>Username</th>
                                <td>{{ user.username }}</td>
                            </tr>
                            <tr>
                                <th>Image</th>
                                <td>
                                    <img src="{{ user.image }}" alt="{{ user.username }}" class="img-fluid" style="max-width: 100px; width: 100%;">
                                </td>
                            </tr>
                            <tr>
                                <th>IsVerified</th>
                                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <a class="btn btn-sm btn-success" href="{{ path('user_edit', {'id': user.id}) }}">edit</a> 
                    <button type="reset" class="btn btn-sm btn-secondary">reset</button> 
                    <a class="btn btn-sm btn-primary" href="{{ path('user_index') }}">back to list</a>

                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}